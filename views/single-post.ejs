<!DOCTYPE html>
<html>
  <head>
    <title>	WISHMAN </title>
    <%- include('head'); %>
  </head>
  <body>
    <%- include('header'); %>

    <% // calculate total value
      let totalVal = 0;
      posts.forEach( post => totalVal += parseInt(post.price) );
    %> 

    <div class="wrapper">
      <% posts.forEach(post => { %>

        <div class="container single">
          <div class="row">
            <% if (post.file){ %>
            <div class="col-12 col-sm-6">
              <picture><img src="<%= post.file.location %>" alt=""></picture>
            </div>
            <% }; %> 

            <div class="col-12 col-sm-6">
              <div class="single__txtBox">
                <h2><%= post.item %></h2>
                <p><%= parseInt(post.price).toLocaleString('en') %> Yen</p>
              </div>

              <div class="row">
                <div class="col-6 col-sm-6">
                  <a href="/posts/edit/<%= post._id %>" 
                    class="single__btn single__btn--edit">
                      <i class="material-icons">mode_edit</i>
                  </a>
                </div>
                <div class="col-6 col-sm-6">
                  <a href="javascript:void(0)" 
                  data-id="<%= post._id %>"
                  class="single__btn single__btn--delete btn--delete">
                    <i class="material-icons">delete</i>
                  </a>
                </div>
              </div>
            </div>
    
            
          </div>
  
          

          <div class="row single__btnRow justify-content-center">
            <div class="col-xs-12">
              <a href="/posts" class="btn btn-primary">Go back to the list page</a>
            </div>
            
          </div>
        </div>

      <% }); %>

      
    </div>

    <%- include('footer'); %> 